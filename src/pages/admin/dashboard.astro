---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Nav from "../../components/Navbar.astro";

const user = {
  name: "User",
};
---

<title>Inicio - Inventario</title>
<BaseLayout>
  {/* Navbar con separacion del contenido principal */}
  <Nav />

  {/* Contenido principal con separacion del navbar */}
  <main
    class="flex-1 p-4 mt-20 bg-gray-100 dark:bg-gray-900 transition-colors duration-300"
  >
    <div class="container mx-auto">
      <h1 class="text-3xl font-bold text-gray-800 dark:text-white mb-6">
        Bienvenido, {user.name}!
      </h1>
      <p class="text-gray-600 dark:text-gray-300">
        Aquí puedes gestionar el inventario de productos.
      </p>
      /* Puedes agregar más contenido aquí, como gráficos, tablas, etc. */
    </div>
  </main>
</BaseLayout>
